#include <stdio.h>
//불쾌지수 공식 = (9 / 5 * 섭씨온도) - 0.55*((1 - 습도%) * (9 / 5 * 섭씨온도 - 26)) + 32;

void form(void) {
	printf("\n단계: 매우높음, 수치: 80이상,    상태: 모든사람들이 불쾌감을 느낌\n");
	printf("************************************************\n");
	printf("단계: 높음,     수치: 75~80미만, 상태: 50%사람들이 불쾌감을 느낌\n");
	printf("************************************************\n");
	printf("단계: 보통:,    수치: 68~75미만, 상태: 불쾌감을 느끼기 시작함\n");
	printf("************************************************\n");
	printf("단계: 낮음:     수치: 68미만,    상태: 이상 대부분 사람들이 불쾌감을 느낌\n");
	printf("************************************************\n");
}

int main() {
	double c; // 기온 (^OC)
	double RH; // 상대습도 (%)
	double first;
	double second;

	printf("현재 기온을 입력해주세요(°C):");
	scanf_s("%lf", &c);
	printf("현재 습도를 입력해주세요(%):");
	scanf_s("%lf", &RH);

	RH = RH * 0.01; //퍼센트 계산을 위해
	first = (9.0 / 5.0) * c; //앞부분 계산
	second = (1 - RH) * (((9.0 / 5.0) * c) - 26); //중간부분 계산
	first = first - (0.55 * second) + 32; //합쳐서 계산

	if (first >= 80)
	{
		printf("불쾌지수가 매우 높음 상태입니다. 현재 수치는 %lf 입니다.\n", first);
		form();
	}
	else if (first >= 75 && first < 80)
	{
		printf("불쾌지수가 높음 상태입니다. 현재 수치는 %lf 입니다.\n", first);
		form();
	}
	else if (first >= 68 && first < 75)
	{
		printf("불쾌지수가 보통 상태입니다. 현재 수치는 %lf 입니다.\n", first);
		form();
	}
	else if (first < 68)
	{
		printf("불쾌지수가 낮음 상태입니다. 현재 수치는 %lf 입니다.\n", first);
		form();
	}
	return 0;
}

#include <stdio.h>

int main()
{
	unsigned int a; // 10진수값 변수
	printf("10진수 입력하시오:____\b\b\b\b");
	scanf_s("%u", &a); // 10진수값 입력 %u는 unsigned때문에
	unsigned int mask = 1 << 7; // 8비트 맨 앞부터 비트and 연산하기 위해서 비트이동
	printf("이진수는:");
	for (int i = 0; i < 8; i++)
	{
		((a & mask) == 0) ? printf("0") : printf("1"); // 돌아가면서 계산
		mask = mask >> 1;
	}
	return 0;
} 
